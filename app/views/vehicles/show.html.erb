<div class="details d-flex w-100 justify-content-between align-items-center">
  <div class="container-open-close d-flex">
    <div class="content">
      <%= cl_image_tag @vehicle.photo.key, height: 400, width: 500, crop: :fill %>
    </div>
    <div class="flap">
    </div>
<div class="d-flex flex-column">
    <div class="">
      <p>Make:<%= @vehicle.make %></p>
      <p>Model:<%= @vehicle.model %></p>
      <p>Transmission:<%= @vehicle.transmission %></p>
      <p>Types_Vehicles:<%= @vehicle.types_vehicles %></p>
      <p>Number of Passengers:<%= @vehicle.passengers %></p>
      <p>Price: $<%= @vehicle.price %></p>
    </div>
  
    <div class="hello">
      <%=link_to "Back", vehicles_path, class:"btn btn-primary btn-m btn-blue" %>
      <%=link_to "Book Now", new_vehicle_booking_path(@vehicle), class:"btn btn-success btn-m btn-blue " %>
    </div>
    </div>
  </div>
</div>