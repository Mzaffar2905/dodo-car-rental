<h1 class='head' style=" font-family: Arial, Helvetica, sans-serif">List of vehicles</h1>

  <div class="cards"> 
    <% @vehicles.each do |vehicle| %>
    <div class="card-category d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path vehicle.photo.key, height: 300, crop: :fill %>')">
      <div>
        <%= vehicle.make %>
        <%= vehicle.model%>
      </div>
      <%=link_to "Show More",vehicle_path(vehicle), class:"btn btn-primary btn-m btn-show" %>
    </div>
    <% end %>
</div>

